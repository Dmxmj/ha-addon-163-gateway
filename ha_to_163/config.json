{
    "name": "HA to 163 Gateway",
    "version": "0.1.16",
    "slug": "ha_to_163",
    "description": "将Home Assistant设备数据推送到网易IoT平台，支持sensor/socket/switch多类型设备",
    "arch": [
        "amd64",
        "armv7",
        "aarch64",
        "i386"
    ],
    "url": "https://github.com/Dmxmj/ha-addon-163-gateway/tree/main",
    "startup": "application",
    "boot": "auto",
    "options": {
        "ha_url": "http://homeassistant:8123",
        "ha_token": "",
        "use_ssl": false,
        "gateway_product_key": "",
        "gateway_device_name": "",
        "gateway_device_secret": "",
        "sub_devices": [
            {
                "id": "sensor_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "hz2_01_",
                "supported_properties": ["temp", "hum", "batt"],
                "enabled": true,
                "type": "sensor"
            },
            {
                "id": "sensor_002",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "hz2_02_",
                "supported_properties": ["batt"],
                "enabled": true,
                "type": "sensor"
            },
            {
                "id": "switch_001",
                "product_key": "r9j18d65u907mt9",
                "device_name": "f42da875-5a4c-4345-ad44-abd167aebe8d",
                "device_secret": "",
                "ha_entity_prefix": "iot_cn_942988692_",  // 核心前缀（去掉switch.，覆盖sensor/switch实体）
                "supported_properties": ["state", "voltage", "current", "power", "energy"],  // 包含电气参数
                "enabled": true,
                "type": "socket"  // 类型改为socket，支持匹配switch和sensor实体
            }
        ],
        "ha_discovery_interval": 3600,
        "wy_push_interval": 60,
        "startup_delay": 30,
        "entity_ready_timeout": 600,
        "retry_attempts": 5,
        "retry_delay": 3,
        "ntp_server": "ntp.n.netease.com",
        "wy_mqtt_broker": "device.iot.163.com",
        "wy_mqtt_port_tcp": 1883,
        "wy_mqtt_port_ssl": 8883,
        "log_level": "info"
    },
    "schema": {
        "ha_url": "str",
        "ha_token": "str",
        "use_ssl": "bool",
        "gateway_product_key": "str",
        "gateway_device_name": "str",
        "gateway_device_secret": "str",
        "sub_devices": [
            {
                "id": "str",
                "product_key": "str",
                "device_name": "str",
                "device_secret": "str",
                "ha_entity_prefix": "str",
                "supported_properties": ["str"],
                "enabled": "bool",
                "type": "match(sensor|switch|socket)"  // 支持socket类型
            }
        ],
        "ha_discovery_interval": "int",
        "wy_push_interval": "int",
        "startup_delay": "int",
        "entity_ready_timeout": "int",
        "retry_attempts": "int",
        "retry_delay": "int",
        "ntp_server": "str",
        "wy_mqtt_broker": "str",
        "wy_mqtt_port_tcp": "int",
        "wy_mqtt_port_ssl": "int",
        "log_level": "match(info|debug|warning|error|critical)"
    },
    "ingress": false,
    "host_network": false,
    "ports": {},
    "map": ["config", "ssl", "share"]
}
