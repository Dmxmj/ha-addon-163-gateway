{
    "name": "HA to 163 Gateway",
    "version": "0.1.8",
    "slug": "ha_to_163",
    "description": "推送传感器、开关、插座、断路器数据到网易IoT平台",
    "arch": ["amd64", "armv7", "aarch64", "i386"],
    "url": "https://gitcode.com/waxgourd/ha-git-addons",
    "startup": "application",
    "boot": "auto",
    "options": {
        "ha_url": "http://homeassistant:8123",
        "ha_token": "",
        "use_ssl": false,
        "sub_devices": [
            {
                "id": "sensor_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "sensor.hz2_01_",
                "device_type": "sensor",
                "supported_properties": ["temp", "hum", "batt"],
                "enabled": true
            },
            {
                "id": "switch_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "switch.iot_cn_942988692_",
                "device_type": "switch",
                "supported_properties": ["state"],
                "enabled": true
            },
            {
                "id": "socket_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "switch.xiaomi_socket_",
                "device_type": "socket",
                "supported_properties": ["state", "power"],
                "enabled": true
            },
            {
                "id": "breaker_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "sensor.breaker_",
                "device_type": "breaker",
                "supported_properties": ["voltage", "current"],
                "enabled": true
            }
        ],
        "wy_push_interval": 30,
        "log_level": "info"
    },
    "schema": {
        "ha_url": "str",
        "ha_token": "str",
        "use_ssl": "bool",
        "sub_devices": [
            {
                "id": "str",
                "product_key": "str",
                "device_name": "str",
                "device_secret": "str",
                "ha_entity_prefix": "str",
                "device_type": "match(sensor|switch|socket|breaker)",
                "supported_properties": ["str"],
                "enabled": "bool"
            }
        ],
        "wy_push_interval": "int",
        "log_level": "match(info|debug|warning|error|critical)"
    },
    "ingress": false,
    "host_network": false,
    "map": ["config"]
}
