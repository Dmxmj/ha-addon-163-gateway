{
    "name": "HA to 163 Gateway",
    "version": "0.1.18",
    "slug": "ha_to_163",
    "description": "将Home Assistant设备数据推送到网易IoT平台，支持switch、socket、breaker多类型设备，三元组和实体前缀可在HA页面配置",
    "arch": [
        "amd64",
        "armv7",
        "aarch64",
        "i386"
    ],
    "url": "https://github.com/Dmxmj/ha-addon-163-gateway/tree/main",
    "startup": "application",
    "boot": "auto",
    "options": {
        "ha_url": "http://homeassistant:8123",
        "ha_token": "",  // 在HA配置页面填写HA的长期令牌
        "use_ssl": false,
        "gateway_product_key": "",  // 网关三元组，在HA页面填写
        "gateway_device_name": "",
        "gateway_device_secret": "",
        "sub_devices": [
            {
                "id": "sensor_001",  // 设备唯一标识（不可修改）
                "product_key": "",  // 子设备三元组，留空待手动填写
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "",  // 实体前缀，留空待手动填写（如"sensor.temp_"）
                "supported_properties": ["temp", "hum", "batt"],  // 支持的属性
                "enabled": true,
                "type": "sensor"
            },
            {
                "id": "switch_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "",  // 如"switch.living_room_"
                "supported_properties": ["state", "voltage", "current", "power"],
                "enabled": true,
                "type": "switch"
            },
            {
                "id": "socket_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "",  // 如"socket.kitchen_"
                "supported_properties": ["state", "voltage", "current", "power", "energy"],
                "enabled": true,
                "type": "socket"
            },
            {
                "id": "breaker_001",
                "product_key": "",
                "device_name": "",
                "device_secret": "",
                "ha_entity_prefix": "",  // 如"breaker.main_"
                "supported_properties": ["state", "voltage", "current", "power", "trip_state"],
                "enabled": true,
                "type": "breaker"
            }
        ],
        "ha_discovery_interval": 3600,  // 设备发现间隔（秒）
        "wy_push_interval": 60,  // 数据推送间隔（秒）
        "startup_delay": 30,  // 启动延迟（秒）
        "entity_ready_timeout": 600,
        "retry_attempts": 5,
        "retry_delay": 3,
        "ntp_server": "ntp.n.netease.com",
        "wy_mqtt_broker": "device.iot.163.com",
        "wy_mqtt_port_tcp": 1883,
        "wy_mqtt_port_ssl": 8883,
        "log_level": "info"
    },
    "schema": {
        "ha_url": "str",
        "ha_token": "str",
        "use_ssl": "bool",
        "gateway_product_key": "str",
        "gateway_device_name": "str",
        "gateway_device_secret": "str",
        "sub_devices": [
            {
                "id": "str",
                "product_key": "str",
                "device_name": "str",
                "device_secret": "str",
                "ha_entity_prefix": "str",
                "supported_properties": ["str"],
                "enabled": "bool",
                "type": "match(sensor|switch|socket|breaker)"
            }
        ],
        "ha_discovery_interval": "int",
        "wy_push_interval": "int",
        "startup_delay": "int",
        "entity_ready_timeout": "int",
        "retry_attempts": "int",
        "retry_delay": "int",
        "ntp_server": "str",
        "wy_mqtt_broker": "str",
        "wy_mqtt_port_tcp": "int",
        "wy_mqtt_port_ssl": "int",
        "log_level": "match(info|debug|warning|error|critical)"
    },
    "ingress": false,
    "host_network": false,
    "ports": {},
    "map": ["config", "ssl", "share"]
}
